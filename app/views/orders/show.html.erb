<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order, <%= current_user.first_name %>!</h4>


    <div class="panel panel-default products">
    
        <table class="table table-bordered">
          <thead>
            <tr>
              <th colspan="2">Product</th>  
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>

          <tbody>
          <% @order_products.each do |order_product| %>
            <%= render partial: "orders/product", locals: {order_product: order_product} %>
          <% end %>
          </tbody>

          <tfoot>
          <tr>
          <th colspan="3" class="text-right">Order total:</th>
          <th> <%= Money.new(@order.total_cents, 'USD') %></th>
          </tr>
          </tfoot>
        </table>
    
      </div>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
