<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

    </div>
    <% if !current_user %>
    <h3>Please log in to create a review </h3>
    <% else %>
    <div class="col-sm-5">
      <%= render partial: "products/new_review" %>
    </div>
    <% end %>

    <div class="col-sm-8" style="padding-top: 1em">
      <% @existing_review.each do |review| %>
      <%= render partial: "products/review", locals: {review: review} %>
      <% end %>
    </div>

  </article>

</section>
